{
    "manifest_version": 2,
    "name": "SteamAutoAuth",
    "version": "0.5",
    "content_scripts": [
        {
            "matches": [
                "https://steamcommunity.com/login/*"
            ],
            "js": [
                "dist/bundle.js"
            ]
        }
    ],
    "permissions": [
        "storage",
        "activeTab",
        "tabs"
    ],
    "browser_action": {
        "default_title": "Set usernames and secrets. ",
        "default_popup": "src/popup/popup.html" 
    }
  }